{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types.d.ts"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
